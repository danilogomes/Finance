<%= form_for(@user, :html => { :multipart => true }) do |f| %>

		<% if @user.errors.any? %>
			<div class="message errormsg" style="display: block; ">
				Não foi possível cadastrar esse usuário</p><br/><br/>
				<% @user.errors.full_messages.each do |msg| %>
				<ul>
					<li><%= msg %></li>
				</ul>
				<% end %>
			</div>
		<% end %>
			 
 	  <div class="field">
		<%= f.label :nome %><br />
		<%= f.text_field :nome, :class => "text small" %>
	  </div><br />
	  <div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email, :class => "text small" %>
	  </div><br />
	  <% unless @user.new_record? -%>
		<div>
		  <%= f.label :old_password %><br/>
		  <%= f.password_field :old_password, :class => "text small" %>
		</div>  <br />
	  <% end -%>
	  <div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password, :class => "text small" %>
	  </div><br />
	  <div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation, :class => "text small" %>
	  </div><br />
	  <%= f.submit 'Cadastrar', :class => 'submit mid' %>
 
<% end %>
