<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% if flash[:notice] -%>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
      <% end -%>
      
      <% if flash[:error] -%>
          <div class="error">
            <%= flash[:error] %>
          </div>
      <% end -%>
      <% if logged_in? -%>
        <%= link_to 'Perfil', profile_path %> | 
        <%= link_to 'Sair', logout_path %>
      <% end -%>
      <%= yield %>
    </div>
  </body>
</html>
