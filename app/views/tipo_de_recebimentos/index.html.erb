		</tr>
		
	<% end %>
	</table>

	<div class="tableactions">
	<%= link_to 'New Tipo de recebimento', new_tipo_de_recebimento_path %>
	</div>

	<div class="pagination right">

	</div>



<div class="bendl"></div>
	<div class="bendr"></div>	
	
	</div>

