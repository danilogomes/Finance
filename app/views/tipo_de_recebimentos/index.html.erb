<% content_for :tabela do %>

<div class="block"> 

	<div class="block_head">
		<div class="bheadl"></div>
		<div class="bheadr"></div>
	<h2>Lista de Tipos de Recebimentos</h2>
	</div>
    
<div class="block_content">    
	<table cellpadding="0" cellspacing="0" width="100%" class="sortable">
		<tr>
			<th>Nome do tipo</th>
			<th>Descrição do tipo</th>
		</tr>

	<% @tipo_de_recebimentos.each do |tipo_de_recebimento| %>
		<tr>
		  <td><%= tipo_de_recebimento.nome_do_tipo %></td>
		  <td><%= tipo_de_recebimento.descricao_do_tipo %></td>
		  
		  
